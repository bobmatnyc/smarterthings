{
  "types": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "docs", "section": "Documentation"},
    {"type": "style", "section": "Code Style", "hidden": false},
    {"type": "refactor", "section": "Code Refactoring"},
    {"type": "perf", "section": "Performance Improvements"},
    {"type": "test", "section": "Tests", "hidden": true},
    {"type": "build", "section": "Build System", "hidden": false},
    {"type": "ci", "section": "CI/CD", "hidden": true},
    {"type": "chore", "section": "Chores", "hidden": true},
    {"type": "revert", "section": "Reverts"}
  ],
  "commitUrlFormat": "https://github.com/bobmatnyc/mcp-smarterthings/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/bobmatnyc/mcp-smarterthings/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "https://github.com/bobmatnyc/mcp-smarterthings/issues/{{id}}",
  "releaseCommitMessageFormat": "chore(release): {{currentTag}}",
  "scripts": {
    "postchangelog": "echo 'Changelog updated successfully'"
  },
  "skip": {
    "tag": false,
    "commit": false,
    "changelog": false
  },
  "tagPrefix": "v",
  "header": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [standard-version](https://github.com/conventional-changelog/standard-version) for commit guidelines.\n"
}
