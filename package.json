{
  "name": "@bobmatnyc/mcp-smarterthings",
  "version": "0.7.2",
  "description": "SmarterThings - AI-powered LLM controller for SmartThings via Model Context Protocol (MCP)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-smarterthings": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "bash scripts/build.sh",
    "build:dev": "SKIP_VALIDATION=true SKIP_TESTS=true bash scripts/build.sh",
    "build:clean": "rm -rf dist",
    "build:tsc": "tsc",
    "start": "node dist/index.js",
    "chat": "pnpm run build && node dist/cli/chat.js",
    "chat:dev": "tsx src/cli/chat.ts",
    "config": "pnpm run build && node dist/cli/config.js",
    "config:dev": "tsx src/cli/config.ts",
    "alexa-server": "pnpm run build && node dist/cli/alexa-server.js",
    "alexa-server:dev": "tsx src/cli/alexa-server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test-gateway": "tsx tools/mcp-test-gateway.ts",
    "test:inspector": "pnpx @modelcontextprotocol/inspector node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "quality": "pnpm run typecheck && pnpm run lint && pnpm test",
    "verify": "pnpm run quality && pnpm run build",
    "version:current": "bash scripts/version.sh current",
    "version:status": "bash scripts/version.sh status",
    "version:sync": "bash scripts/version.sh sync",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:auto": "bash scripts/release.sh auto",
    "release:full:patch": "bash scripts/release.sh patch",
    "release:full:minor": "bash scripts/release.sh minor",
    "release:full:major": "bash scripts/release.sh major",
    "release:dry-run": "DRY_RUN=true bash scripts/release.sh patch",
    "preversion": "pnpm test || true",
    "version": "bash scripts/version.sh sync && pnpm run build:tsc",
    "postversion": "git push --follow-tags origin main"
  },
  "packageManager": "pnpm@10.18.3",
  "keywords": [
    "mcp",
    "smartthings",
    "home-automation",
    "model-context-protocol",
    "llm"
  ],
  "author": "masa",
  "license": "MIT",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.9",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@smartthings/core-sdk": "^8.0.0",
    "@tuya/tuya-connector-nodejs": "^2.0.0",
    "@types/mustache": "^4.2.6",
    "alexa-verifier": "^4.0.0",
    "chalk": "^5.3.0",
    "chromadb": "^3.1.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fastify": "^5.6.2",
    "lutron-leap": "^3.4.2",
    "mustache": "^4.2.0",
    "openai": "^4.20.0",
    "winston": "^3.15.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@linear/sdk": "^65.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "nock": "^14.0.10",
    "prettier": "^3.3.0",
    "standard-version": "^9.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
